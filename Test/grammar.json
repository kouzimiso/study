{
    "keywords": [
      "もし",
      "ならば",
      "表示",
      "終了",
      "==",
      "!=",
      ">",
      "<",
      ">=",
      "<=",
      "=",
      "true",
      "false"
    ],
    "patterns": [
      {"name": "identifier", "regex": "^[a-zA-Z_][a-zA-Z0-9_]*"},
      {"name": "integer", "regex": "^[0-9]+"},
      {"name": "string_literal", "regex": "^'[^']*'"},
      {"name": "equality_operator", "regex": "^(==|!=|>|<|>=|<=)"},
      {"name": "assignment_operator", "regex": "^="}
    ],
    "rules": [
      {
        "name": "プログラム",
        "structure": [
          {"type": "rule", "name": "文", "repeatable": true}
        ]
      },
      {
        "name": "文",
        "alternatives": [
          {"type": "rule", "name": "もし文"},
          {"type": "rule", "name": "表示文"},
          {"type": "rule", "name": "代入文"},
          {"type": "keyword", "value": "終了"}
        ]
      },
      {
        "name": "もし文",
        "structure": [
          {"type": "keyword", "value": "もし"},
          {"type": "rule", "name": "条件"},
          {"type": "keyword", "value": "ならば"},
          {"type": "rule", "name": "処理"},
          {"type": "keyword", "value": "終了"}
        ]
      },
      {
        "name": "条件",
        "alternatives": [
          {"type": "rule", "name": "比較条件"},
          {"type": "rule", "name": "真偽値"}
        ]
      },
      {
        "name": "比較条件",
        "structure": [
          {"type": "pattern", "name": "identifier"},
          {"type": "pattern", "name": "equality_operator"},
          {"type": "alternatives", "elements": [
            {"type": "pattern", "name": "integer"},
            {"type": "pattern", "name": "identifier"},
            {"type": "keyword", "alternatives": ["true", "false"]}
          ]}
        ]
      },
      {
        "name": "真偽値",
        "structure": [
          {"type": "pattern", "name": "identifier"}
        ]
      },
      {
        "name": "処理",
        "alternatives": [
          {"type": "rule", "name": "表示文"},
          {"type": "rule", "name": "代入文"}
        ]
      },
      {
        "name": "表示文",
        "structure": [
          {"type": "keyword", "value": "表示"},
          {"type": "alternatives", "elements": [
            {"type": "pattern", "name": "identifier"},
            {"type": "pattern", "name": "integer"},
            {"type": "pattern", "name": "string_literal"}
          ]}
        ]
      },
      {
        "name": "代入文",
        "structure": [
          {"type": "pattern", "name": "identifier"},
          {"type": "pattern", "name": "assignment_operator"},
          {"type": "alternatives", "elements": [
            {"type": "pattern", "name": "integer"},
            {"type": "pattern", "name": "identifier"}
          ]},
          {"type": "keyword", "value": "終了", "required": false}
        ]
      }
    ]
  }